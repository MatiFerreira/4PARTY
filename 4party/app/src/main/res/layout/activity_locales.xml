<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grismedianoche"
        tools:context=".IntefaceAPP.LocalesActivity">

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/animacion_producto"
            app:lottie_colorFilter="@color/grismedianoche"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:id="@+id/lottieAnimationView3"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="20dp"
              android:hint="NOMBRE DEL PRODUCTO"
              android:paddingLeft="10dp"
              android:textColorHint="@color/morado"
              android:textColor="@color/morado"
              android:id="@+id/nombreEstablecimientoET"
              android:background="@drawable/textviewredondo"
              app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView3"
    />

    <EditText android:layout_width="match_parent"
              android:inputType="number"
              android:layout_height="50dp"
              android:textColor="@color/morado"
              android:textColorHint="@color/morado"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:background="@drawable/textviewredondo"
              android:hint="CANTIDAD PRODUCTO"
              android:id="@+id/cantidadProductoET"
              android:paddingLeft="10dp"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/nombreEstablecimientoET"/>

    <EditText android:layout_width="match_parent"
              android:id="@+id/precioProductoET"
              android:layout_height="50dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="10dp"
              android:hint="PRECIO"
              android:textColorHint="@color/morado"
              android:textColor="@color/morado"
              android:inputType="numberDecimal"
              android:paddingLeft="10dp"
              app:layout_constraintTop_toBottomOf="@+id/cantidadProductoET"
              android:background="@drawable/textviewredondo"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.409"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toBottomOf="@+id/precioProductoET"
              android:id="@+id/descripcionProductET"
              android:hint="BREVE DECRIPCION PRODUCTO"
              android:paddingLeft="10dp"
              android:textColorHint="@color/morado"
              android:textColor="@color/morado"
              android:background="@drawable/textviewredondo"
    />

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="CONFIRMAR"
            android:background="@drawable/botonredondo"
            app:layout_constraintTop_toBottomOf="@+id/descripcionProductET"
            android:id="@+id/botonconfirmProduct"
            android:layout_marginTop="12dp"
            android:layout_marginStart="80dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/descripcionProductET"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="CANCELAR"
            android:background="@drawable/botonredondo"
            android:id="@+id/botonCancellProduct"
            android:layout_marginEnd="80dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
