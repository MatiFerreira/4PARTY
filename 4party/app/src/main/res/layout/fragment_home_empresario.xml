<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grismedianoche"
        tools:context=".IntefaceAPP.LocalesActivity">


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textviewtitulohomeAutonomo"
              android:textColorHint="@color/morado"
              android:textStyle="bold"
              android:fontFamily="@font/robotobold"
              android:textAlignment="center"
              android:textSize="21sp"
              android:textColor="@color/morado"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="48dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"/>

    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textviewtitulohomeAutonomo"
            android:layout_marginTop="8dp"
            app:lottie_rawRes="@raw/animation_database_business"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="0.5"
            android:id="@+id/lottieAnimationView4"/>


    <Button android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/botonredondo"
            android:text="CREAR OFERTA"
            android:id="@+id/botoncrearoferta"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/modificardatosAutonomo"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView4"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CERRAR SESIÃ“N"
            android:background="@drawable/botonredondo"
            android:id="@+id/botoncerrarsesionAutonomo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toBottomOf="@+id/modificardatosAutonomo"
            app:layout_constraintEnd_toStartOf="@+id/botonteliminarcuenta"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modificardatosAutonomo"
            android:text="MODIFICAR DATOS"
            android:background="@drawable/botonredondo"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView4"
            app:layout_constraintStart_toEndOf="@+id/botoncrearoferta"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/cambiarimagenboton"
            android:layout_marginEnd="8dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cambiarimagenboton"
            android:background="@drawable/botonredondo"
            android:text="IMAGEN LOCAL"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/modificardatosAutonomo"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView4"
    />
    <Button android:layout_width="wrap_content"
            android:background="@drawable/botonredondo"
            android:text="ELIMINAR CUENTA"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/modificardatosAutonomo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botoncerrarsesionAutonomo"
            app:layout_constraintHorizontal_bias="0.63"
            android:id="@+id/botonteliminarcuenta"/>

</androidx.constraintlayout.widget.ConstraintLayout>
