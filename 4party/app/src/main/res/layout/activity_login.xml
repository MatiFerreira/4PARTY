<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grismedianoche"
        tools:context=".LogInOutUser.Login_activity"
        android:orientation="vertical"
>
    <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/animationuserlogin"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp"
            app:lottie_speed="0.5"
            app:layout_constraintHorizontal_bias="0.496" android:id="@+id/lottieAnimationView2"/>


    <EditText
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:hint="EMAIL"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/textviewredondo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView2"
            app:layout_constraintHorizontal_bias="0.496"
            android:id="@+id/mail_loginact"
            android:layout_marginTop="50dp"/>
    <EditText
            android:layout_width="250dp"
            android:id="@+id/password_loginact"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:hint="CONTRASEÃ‘A"
            android:background="@drawable/textviewredondo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/mail_loginact"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/link_textU"
              android:text="IR A LOGIN BUSINESS"
              android:textSize="16dp"
              android:textColor="@color/white"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="25dp"
              app:layout_constraintTop_toBottomOf="@+id/password_loginact"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonlogin_loginact"
            android:background="@drawable/botonredondo"
            android:text="LOGIN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/link_textU"
            app:layout_constraintHorizontal_bias="0.25"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonregistro_loginact"
            android:text="NO TENGO CUENTA"
            android:background="@drawable/botonredondo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/botonlogin_loginact" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/link_textU"
            app:layout_constraintHorizontal_bias="0.387"/>
</androidx.constraintlayout.widget.ConstraintLayout>
