<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">


        <TextView
            android:id="@+id/textView1_loginact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio de Sesion"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/mail_loginact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.899"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/mail_loginact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="Ingrese el mail"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/password_loginact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.919"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/password_loginact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/botonlogin_loginact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.905"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/botonlogin_loginact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            app:layout_constraintBottom_toTopOf="@+id/botonregistro_loginact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.945"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/botonregistro_loginact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO TENGO CUENTA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.855"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/link_textU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir al login bussines"
            android:textColor="#89A2D3"
            app:layout_constraintBottom_toTopOf="@+id/botonlogin_loginact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/password_loginact"
            app:layout_constraintVertical_bias="0.39"
            tools:ignore="MissingConstraints" />

        <ImageView
                android:id="@+id/imageView_loginact"
                android:layout_width="141dp"
                android:layout_height="279dp"
                app:layout_constraintBottom_toTopOf="@+id/textView1_loginact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.044"
                app:srcCompat="@drawable/logo4part"
                tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.485"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
